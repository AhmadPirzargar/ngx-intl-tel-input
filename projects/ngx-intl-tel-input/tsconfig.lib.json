{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"outDir": "../../out-tsc/lib",
		"target": "es2020",
		"module": "esnext",
		"moduleResolution": "node",
		"declaration": true,
		"sourceMap": true,
    "inlineSources": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"types": [],
		"lib": [
			"dom",
			"es2018"
		]
	},
  "angularCompilerOptions": {
    "compilationMode": "partial",
		"skipTemplateCodegen": true,
		"strictMetadataEmit": true,
    "enableResourceInlining": true
	},
	"exclude": [
		"src/test.ts",
		"**/*.spec.ts"
	]
}